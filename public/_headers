# Cloudflare Pages Headers Configuration
# Smart caching strategy for SaaS

# HTML pages - NEVER cache (ensures users get latest version with updated ?v= hashes)
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache

/*.html
  Cache-Control: no-cache, no-store, must-revalidate

# JS/CSS files with version hash (?v=xxx) - LONG CACHE
# The ?v= hash changes on each deployment, forcing browser to fetch new version
/static/js/*
  Cache-Control: public, max-age=31536000, immutable

/static/js/dist/*
  Cache-Control: public, max-age=31536000, immutable

/static/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images and fonts - Long cache (rarely change)
/static/images/*
  Cache-Control: public, max-age=31536000

/*.png
  Cache-Control: public, max-age=86400

/*.ico
  Cache-Control: public, max-age=86400

/*.woff2
  Cache-Control: public, max-age=31536000

# API responses - never cache
/api/*
  Cache-Control: no-store

# Service worker - short cache (needs to update)
/service-worker.js
  Cache-Control: no-cache, must-revalidate
