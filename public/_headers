# Cloudflare Pages Headers Configuration
# Forces browsers to always check for updates on static files

# All static JS files - NO CACHE (critical for updates)
/static/js/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/static/js/dist/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# CSS files - short cache
/static/*.css
  Cache-Control: no-cache, no-store, must-revalidate

# HTML pages - never cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

/
  Cache-Control: no-cache, no-store, must-revalidate

# Images and fonts - can be cached longer (they rarely change)
/static/images/*
  Cache-Control: public, max-age=86400

/*.png
  Cache-Control: public, max-age=86400

/*.ico
  Cache-Control: public, max-age=86400

# API responses - never cache
/api/*
  Cache-Control: no-store
