{
  "name": "maintenance-app",
  "version": "2.10.7",
  "description": "Système de gestion de maintenance pour IGP Glass",
  "author": "Salah Khalfi <salah@igpglass.ca>",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=maintenance-db --local --ip 0.0.0.0 --port 3000",
    "validate": "node scripts/validate-content.cjs",
    "build:css": "tailwindcss -i src/styles.css -o public/static/styles.css --minify",
    "prebuild": "npm run build:css",
    "build:client": "vite build -c vite.client.config.ts",
    "build": "vite build && npm run build:client",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name webapp",
    "deploy:test": "bash scripts/deploy-test.sh",
    "deploy:prod": "bash scripts/deploy-prod.sh",
    "info": "cat DEPLOYMENT_CONFIG.md | head -50",
    "info:urls": "cat DEPLOYMENT_CONFIG.md | grep -A 3 'URLS ACTUELLES'",
    "info:quick": "cat QUICK_REFERENCE.md",
    "check:branch": "git branch --show-current",
    "check:version": "git describe --tags --abbrev=0 2>/dev/null || echo 'No tags yet'",
    "check:deployments": "npx wrangler pages deployment list --project-name webapp | head -10",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint src/**/*.{js,ts,tsx} --max-warnings 50",
    "lint:fix": "eslint src/**/*.{js,ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{js,ts,tsx} --max-warnings 0",
    "security-check": "bash check-security.sh",
    "db:migrate:local": "wrangler d1 migrations apply maintenance-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply maintenance-db",
    "db:seed": "wrangler d1 execute maintenance-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:backup": "bash scripts/backup-db.sh",
    "db:restore": "bash scripts/restore-db.sh",
    "db:list-backups": "ls -lht .wrangler/backups/ 2>/dev/null || echo 'Aucun backup trouvé'",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "vitest run --config vitest.config.simple.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "hub:check": "bash check-hub-sync.sh",
    "hub:version": "grep -m1 'Version:' LESSONS-LEARNED-MEMOIRE.md",
    "hub:changelog": "grep -A 20 'HISTORIQUE DES MODIFICATIONS' LESSONS-LEARNED-MEMOIRE.md"
  },
  "dependencies": {
    "@block65/webcrypto-web-push": "^1.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "hono": "^4.10.4",
    "jose": "^6.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.25",
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autocannon": "^8.0.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^4.4.0"
  }
}
