{
  "name": "maintenance-app",
  "version": "3.0.0-beta.4",
  "description": "Système de gestion de maintenance industrielle",
  "author": "Salah-Eddine KHALFI (salah [at] khalfi [dot] com)",
  "license": "PROPRIETARY",
  "copyright": "Copyright © 2025 Salah-Eddine KHALFI. All rights reserved.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=maintenance-db --local --ip 0.0.0.0 --port 3000",
    "validate": "node scripts/validate-content.cjs",
    "build:css": "tailwindcss -i src/styles.css -o public/static/styles.css --minify",
    "build:minify": "node scripts/minify-legacy.cjs",
    "prebuild": "npm run build:css && npm run build:minify",
    "build:worker": "vite build",
    "build:messenger": "vite build -c vite.messenger.config.ts && mv dist/messenger/src/messenger/index.html dist/messenger/index.html && rm -rf dist/messenger/src && cp public/messenger/messenger-icon*.png dist/messenger/ && cp public/messenger/service-worker-messenger.js dist/messenger/",
    "build": "npm run build:worker && npm run build:messenger",
    "build:full": "npm run build:css && npm run build:minify && npm run build",
    "dev:build": "npm run build:full",
    "deploy:dev": "bash scripts/deploy-dev.sh",
    "preview": "wrangler pages dev dist",
    "deploy:safe": "npm run build && wrangler d1 migrations apply maintenance-db --remote && wrangler pages deploy dist --project-name webapp --branch main",
    "deploy:test": "bash scripts/deploy-test.sh",
    "deploy:prod": "bash scripts/deploy-prod.sh",
    "info": "cat DEPLOYMENT_CONFIG.md | head -50",
    "info:urls": "cat DEPLOYMENT_CONFIG.md | grep -A 3 'URLS ACTUELLES'",
    "info:quick": "cat QUICK_REFERENCE.md",
    "info:build": "cat QUICK_BUILD_REFERENCE.md",
    "check:dist": "bash scripts/check-dist-sync.sh",
    "check:branch": "git branch --show-current",
    "check:version": "git describe --tags --abbrev=0 2>/dev/null || echo 'No tags yet'",
    "check:deployments": "npx wrangler pages deployment list --project-name webapp | head -10",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint src/**/*.{js,ts,tsx} --max-warnings 50",
    "lint:fix": "eslint src/**/*.{js,ts,tsx} --fix",
    "lint:check": "eslint src/**/*.{js,ts,tsx} --max-warnings 0",
    "security-check": "bash check-security.sh",
    "db:migrate:local": "wrangler d1 migrations apply maintenance-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply maintenance-db",
    "db:seed": "wrangler d1 execute maintenance-db --local --file=./seed.sql",
    "db:generate": "drizzle-kit generate",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:backup": "bash scripts/backup-db.sh",
    "db:restore": "bash scripts/restore-db.sh",
    "db:list-backups": "ls -lht .wrangler/backups/ 2>/dev/null || echo 'Aucun backup trouvé'",
    "status": "bash scripts/status.sh",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "clean:cache": "rm -rf dist .wrangler/tmp node_modules/.cache",
    "clean:full": "rm -rf node_modules dist .wrangler package-lock.json",
    "memory:free": "pm2 delete all 2>/dev/null || true; fuser -k 3000/tcp 2>/dev/null || true",
    "prebuild:safe": "npm run memory:free && npm run clean:cache",
    "test": "vitest run --config vitest.config.simple.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:search": "node scripts/test-search.js",
    "hub:check": "bash check-hub-sync.sh",
    "hub:version": "grep -m1 'Version:' LESSONS-LEARNED-MEMOIRE.md",
    "hub:changelog": "grep -A 20 'HISTORIQUE DES MODIFICATIONS' LESSONS-LEARNED-MEMOIRE.md",
    "audit": "./scripts/audit-dead-code.sh"
  },
  "dependencies": {
    "@block65/webcrypto-web-push": "^1.0.2",
    "@hono/zod-validator": "^0.7.5",
    "@tanstack/react-query": "^5.90.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "hono": "^4.10.4",
    "jose": "^6.1.0",
    "lucide-react": "^0.555.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^2.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.25",
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autocannon": "^8.0.0",
    "autoprefixer": "^10.4.22",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^4.4.0"
  }
}
